var x;
var y;
var radius;

function setup() {
  createCanvas(600, 400);
  x = random(width);
  y = random(height);
  radius = 20;
}

function draw() {
  background(255);
  line(mouseX, 0, mouseX, 100);

  if (dist(mouseX, mouseY, x, y) > radius) {
    if (mouseIsPressed) {
      x = mouseX;
      y = mouseY;
    }
    fill(175, 100, 220);
  }
  else {
    fill(20, 75, 200);
  }

  ellipse(x, y, radius * 2);
  x += random(-5, 5);
  y += random(-5, 5);
}
